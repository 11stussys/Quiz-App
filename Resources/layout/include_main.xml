<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar1"
        android:theme="@style/AppTheme.DarkAppBar"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"/>

    <TextView
        android:layout_marginTop="15dp"
        android:text="Select a Topic for Quiz"
        android:textStyle="normal"
        android:gravity="center"
        android:textSize="22sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:padding="16dp"
            android:rowCount="3"
            android:columnCount="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center">


            <!-- Row One -->
            <androidx.cardview.widget.CardView
                android:layout_width="147dp"
                android:layout_height="141dp"
                android:layout_gravity="right"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:id="@+id/historyLayout"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@drawable/history"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="100dp"
                        android:layout_height="100dp"/>

                    <View
                        android:layout_marginTop="10dp"
                        android:background="@color/colorLine"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>

                    <TextView
                        style="@style/textViewStyle"
                        android:text="History"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="147dp"
                android:layout_height="141dp"
                android:layout_gravity="left"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:id="@+id/geographyLayout"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@drawable/geography"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="100dp"
                        android:layout_height="100dp"/>

                    <View
                        android:layout_marginTop="10dp"
                        android:background="@color/colorLine"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>

                    <TextView
                        style="@style/textViewStyle"
                        android:text="Geography"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Row Two -->
            <androidx.cardview.widget.CardView
                android:layout_width="147dp"
                android:layout_height="141dp"
                android:layout_gravity="right"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:id="@+id/spaceLayout"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@drawable/space"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="100dp"
                        android:layout_height="100dp"/>

                    <View
                        android:layout_marginTop="10dp"
                        android:background="@color/colorLine"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>

                    <TextView
                        style="@style/textViewStyle"
                        android:text="Space"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="147dp"
                android:layout_height="141dp"
                android:layout_gravity="left"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:id="@+id/engineeringLayout"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@drawable/engineering"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="100dp"
                        android:layout_height="100dp"/>

                    <View
                        android:layout_marginTop="10dp"
                        android:background="@color/colorLine"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>

                    <TextView
                        style="@style/textViewStyle"
                        android:text="Engineering"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Row Three -->
            <androidx.cardview.widget.CardView
                android:layout_width="147dp"
                android:layout_height="141dp"
                android:layout_gravity="right"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:id="@+id/programmingLayout"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@drawable/programming"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="100dp"
                        android:layout_height="100dp"/>

                    <View
                        android:layout_marginTop="10dp"
                        android:background="@color/colorLine"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>

                    <TextView
                        style="@style/textViewStyle"
                        android:text="Programming"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="147dp"
                android:layout_height="141dp"
                android:layout_gravity="left"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:id="@+id/businessLayout"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@drawable/business"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="100dp"
                        android:layout_height="100dp"/>

                    <View
                        android:layout_marginTop="10dp"
                        android:background="@color/colorLine"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>

                    <TextView
                        style="@style/textViewStyle"
                        android:text="Business"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </GridLayout>
    </ScrollView>
</LinearLayout>
